---
// ProjectCard.astro
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
    title: string;
    description: string;
    image: ImageMetadata;
    link: string;
    githubLink: string;
}

const { title, description, image, link, githubLink } = Astro.props;
---

<article
    class="relative border border-gray-300 bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200"
>
    <a href={link}>
        <Image src={image} alt={title} width={400} height={300} />
        <div class="p-4">
            <h3 class="text-xl font-semibold mb-2">{title}</h3>
            <p class="text-gray-700">{description}</p>
        </div>
    </a>
    <a
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer"
        class="absolute bottom-1 right-1 text-gray-900 hover:text-gray-800"
    >
        <svg
            class="w-8 h-8"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                fill-rule="evenodd"
                d="M12 2C6.478 2 2 6.478 2 12c0 4.418 2.867 8.166 6.839 9.49.5.092.682-.217.682-.483 0-.237-.009-.868-.013-1.703-2.782.605-3.369-1.34-3.369-1.34-.454-1.153-1.11-1.46-1.11-1.46-.908-.621.069-.608.069-.608 1.004.07 1.533 1.032 1.533 1.032.892 1.528 2.341 1.087 2.91.832.091-.647.349-1.086.635-1.336-2.221-.253-4.555-1.111-4.555-4.945 0-1.092.39-1.985 1.029-2.683-.103-.253-.447-1.272.098-2.65 0 0 .84-.269 2.75 1.026A9.564 9.564 0 0112 6.8c.852.004 1.71.115 2.511.337 1.908-1.295 2.747-1.026 2.747-1.026.548 1.378.204 2.397.1 2.65.641.698 1.027 1.591 1.027 2.683 0 3.843-2.337 4.688-4.566 4.938.36.31.68.924.68 1.861 0 1.344-.012 2.429-.012 2.759 0 .268.18.579.688.481C19.136 20.162 22 16.417 22 12c0-5.522-4.478-10-10-10z"
                clip-rule="evenodd"></path>
        </svg>
    </a>
</article>
